<?xml version="1.0" encoding="utf-8"?>
<com.example.tvshows.utils.SwipeRevealLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?listPreferredItemHeightLarge"
        android:id="@+id/parent_panel"
        app:dragFromEdge="right"
        android:clickable="true"
        android:focusable="true">

    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/add_remove_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/delete"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:padding="@dimen/mid_margin"
                android:layout_margin="@dimen/smaller_margin"
                android:background="@color/red"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true">
        <com.google.android.material.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?listPreferredItemHeightLarge"
                android:id="@+id/card"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="?listPreferredItemHeightLarge">


                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="?listPreferredItemHeightLarge"
                        android:scaleType="fitXY"
                        tools:srcCompat="@tools:sample/avatars[0]"
                        android:id="@+id/show_iv"
                        android:layout_marginTop="@dimen/small_margin"
                        android:layout_marginStart="@dimen/mid_margin"
                        android:layout_marginBottom="@dimen/small_margin"
                        android:layout_marginEnd="@dimen/small_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                        tools:text="TextView"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/show_name_txt"
                        android:layout_marginStart="@dimen/small_margin"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/show_iv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</com.example.tvshows.utils.SwipeRevealLayout>